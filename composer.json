{
    "name": "yc-php/code-analysis",
    "description": "YC-PHPCodeAnalysis&MCP - Professional PHP code analysis platform with AI-enhanced MCP integration",
    "type": "library",
    "license": "MIT",
    "version": "0.1.0",
    "keywords": ["php", "code-analysis", "security", "performance", "ast", "mcp"],
    "homepage": "https://github.com/hiyco/YC-PHPCodeAnalysis-MCP",
    "authors": [
        {
            "name": "YC",
            "email": "yichaoling@gmail.com",
            "homepage": "https://yc-php.com",
            "role": "Lead Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/yc-php/yc-php-code-analysis/issues",
        "wiki": "https://github.com/yc-php/yc-php-code-analysis/wiki",
        "docs": "https://docs.yc-php.com"
    },
    "require": {
        "php": ">=8.1",
        "nikic/php-parser": "^4.17",
        "symfony/console": "^6.3",
        "symfony/filesystem": "^6.3",
        "symfony/finder": "^6.3",
        "symfony/yaml": "^6.3",
        "psr/log": "^3.0",
        "monolog/monolog": "^3.4",
        "league/flysystem": "^3.18",
        "webmozart/assert": "^1.11",
        "ramsey/uuid": "^4.7",
        "nesbot/carbon": "^2.70"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.4",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.34"
    },
    "autoload": {
        "psr-4": {
            "YcPca\\": "src/",
            "YcPca\\Tests\\": "tests/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "YcPca\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/pca"
    ],
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "cs:fix": "php-cs-fixer fix",
        "stan": "phpstan analyse",
        "quality": [
            "@cs:check",
            "@stan",
            "@test"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-main": "0.1-dev"
        }
    }
}