{
  "name": "yc-php-code-analysis-mcp-server",
  "version": "1.0.0",
  "description": "Professional MCP Server for PHP Code Analysis with AI Integration",
  "main": "dist/server.js",
  "bin": {
    "php-analysis-mcp": "dist/server.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/server.ts",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "docker:build": "docker build -t yc-php-analysis-mcp .",
    "docker:run": "docker run -p 3000:3000 yc-php-analysis-mcp",
    "security:audit": "npm audit && snyk test",
    "performance:test": "clinic doctor -- node dist/server.js",
    "docs:generate": "typedoc src --out docs"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "php",
    "code-analysis",
    "ai",
    "language-server",
    "static-analysis",
    "security",
    "performance",
    "refactoring"
  ],
  "author": "YC-2025Copyright",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yc-2025/php-code-analysis-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/yc-2025/php-code-analysis-mcp-server/issues"
  },
  "homepage": "https://github.com/yc-2025/php-code-analysis-mcp-server#readme",
  "dependencies": {
    "ws": "^8.14.2",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "chokidar": "^3.5.3",
    "lru-cache": "^10.1.0",
    "crypto": "^1.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/ws": "^8.5.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcrypt": "^5.0.2",
    "@types/uuid": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "nodemon": "^3.0.2",
    "clinic": "^13.0.0",
    "snyk": "^1.1270.0",
    "typedoc": "^0.25.6"
  },
  "dependencies": {
    "ws": "^8.14.2",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "chokidar": "^3.5.3",
    "lru-cache": "^10.1.0",
    "crypto": "^1.0.1",
    "uuid": "^9.0.1",
    "php-parser": "^3.1.5"
  },
  "peerDependencies": {
    "nikic/php-parser": "^4.17"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/server.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/explicit-function-return-type": "warn",
      "@typescript-eslint/no-explicit-any": "off",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.test.ts"
    ],
    "exec": "ts-node src/server.ts"
  }
}